{
    "apiVersion": "kubedirector.hpe.com/v1beta1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "concourse"
    },
    "spec": {
        "systemdRequired": true,
        "defaultPersistDirs": ["/home"],
        "config": {
          "roleServices": [
            {
              "serviceIDs": [
                "ssh",
                "concourse-web"
              ],
              "roleID": "concourse"
            }
          ],
          "selectedRoles": [
            "concourse"
          ]
        },
        "label": {
          "name": "Concourse CI",
          "description": "Concourse Continious Integration"
        },
        "distroID": "hcp/concourseci",
        "version": "1.0",
        "configSchemaVersion": 7,
        "services": [
          {
            "endpoint": {
              "port": 22,
              "isDashboard": false
            },
            "id": "ssh",
            "label": {
              "name": "SSH"
            }
          },
          {
            "endpoint": {
              "urlScheme": "http",
              "path": "/",
              "isDashboard": true,
              "port": 8080
            },
            "id":"concourse-web",
            "label": {
              "name": "concourse-web"
            }
          }
        ],
        "defaultConfigPackage": {
            "packageURL" : "file:///opt/configscripts/appconfig.tgz"
        },
        "roles": [
          {
            "imageRepoTag": "docker.io/srujanreddya/concourse-ci:1.0",
            "cardinality": "1+",
            "id": "concourse"
          }
        ]
      }
    }
