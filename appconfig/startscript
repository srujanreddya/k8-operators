set -o pipefail
SELF=$(readlink -nf $0)
export CONFIG_BASE_DIR=$(dirname ${SELF})

source ${CONFIG_BASE_DIR}/logging.sh
source ${CONFIG_BASE_DIR}/utils.sh

if [[ "$1" == "--addnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--delnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--configure" ]]; then
    log "Starting configuration ... "

    ## Fall through to start the configuration.
else
    echo "ERROR: Unknown command line option(s): '$@'"
    exit 10
fi

source ${CONFIG_BASE_DIR}/macros.sh

####################### AUTOGENERATED CODE STARTS BELOW #######################


## Initializing the PostgresSQL DB
log_exec /usr/pgsql-9.6/bin/postgresql96-setup initdb
log_exec echo "listen_addresses = '*'" >> /var/lib/pgsql/9.6/data/postgresql.conf
log_exec sed -i -e "s/ident$/trust/g" /var/lib/pgsql/9.6/data/pg_hba.conf
log_exec sed -i -e "s/127\.0\.0\.1\/32/0\.0\.0\.0\/0/g" /var/lib/pgsql/9.6/data/pg_hba.conf
log_exec sed -i -e "s/max_connections = 100/max_connections = 200/g" /var/lib/pgsql/9.6/data/postgresql.conf
log_exec sed -i -e "s/shared_buffers = 128MB/shared_buffers = 512MB/g" /var/lib/pgsql/9.6/data/postgresql.conf




log_exec systemctl enable postgresql-9.6
log_exec systemctl start postgresql-9.6
log_exec echo postgres:postgres | chpasswd
log_exec su postgres -c "createuser concourse"
log_exec su postgres -c "psql -c \"ALTER USER concourse WITH ENCRYPTED password 'concourse'\""
log_exec su postgres "psql -c \"CREATE DATABASE concourse OWNER concourse\""


## Starting concourse web node & worker

log_exec systemctl enable concourse-web
log_exec systemctl start concourse-web

log_exec systemctl enable concourse-worker
log_exec systemctl start concourse-worker
